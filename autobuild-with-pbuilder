#!/bin/bash
set -e

PASSENGER_AUTOBUILDER_APP=`dirname "$0"`
PASSENGER_AUTOBUILDER_APP=`cd "$PASSENGER_AUTOBUILDER_APP"; pwd`
source "$PASSENGER_AUTOBUILDER_APP/library"

git_url="$1"
name="$2"
only_one="$3"

if [[ "$git_url" = "" || "$name" = "" ]]; then
	echo "Usage: ./autobuild-with-pbuilder GIT_URL NAME [--only-one]"
	exit 1
fi

function perform()
{
	local base_tgz
	local arch
	local platform
	base_tgz="$1"
	arch="$2"
	platform="$3"

	local maybe_linux32
	if [[ $arch == i386 ]]; then
		maybe_linux32=linux32
	else
		maybe_linux32=
	fi

	status "Performing build: $platform"
	$maybe_linux32 sudo pbuilder execute \
		--basetgz "$base_tgz" \
		--bindmounts "$PASSENGER_AUTOBUILDER_ROOT" \
		-- \
		autobuild-bootstrap-in-pbuilder \
		"$git_url" "$platform" "$name"
}

perform lucid-amd64.tgz amd64 linux-x86_64
if [[ "$only_one" != "" ]]; then exit; fi
perform lucid-i386.tgz i386 linux-x86
